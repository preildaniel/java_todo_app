<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="bottomPanel" alignment="CENTER" prefHeight="271.0" prefWidth="358.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.banki.todoapp.TodoController">

    <TextArea fx:id="todoListView" prefHeight="200.0" prefWidth="200.0" />
    <HBox fx:id="inputRow" prefHeight="56.0" prefWidth="358.0">
        <children>
            <TextField fx:id="inputField" promptText="Írj be egy új teendőt" />
            <Button fx:id="addButton" mnemonicParsing="false" text="Hozzáadás" />
        </children>
    </HBox>
    <HBox prefHeight="0.0" prefWidth="358.0">
        <Button fx:id="deleteButton" mnemonicParsing="false" text="Kijelölt elemek törlése" />
    </HBox>

</VBox>
